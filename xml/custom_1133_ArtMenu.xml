<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1133">
	<defaultcontrol always="true">90500</defaultcontrol>
	<onunload>Skin.Reset(Art2Customizer)</onunload>
	<coordinates>
		<left>0</left>
		<top>0</top>
		<system>1</system>
	</coordinates>
	<controls>
		<include content="SideBladeCloseIcon">
			<param name="CloseIconDialogClose" value="Dialog.Close(1133)" />
			<param name="CloseIconDialogClose2" value="noop" />
			<param name="ClearMediaMenu" value="ClearProperty(MediaMenu,Home)" />
			<param name="CloseIconSetFocus" value="SetFocus(50)" />
			<param name="CloseIconVisibility" value="system.getbool(input.enablemouse) + Window.IsActive(1133)" />
		</include>
		<control type="group">
			<left>15</left>
			<animation effect="slide" start="-440,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-440,0" time="160" tween="quadratic" easing="out">WindowClose</animation>
			<control type="label">
				<top>10</top>
				<width>400</width>
				<height>52</height>
				<textoffsetx>15</textoffsetx>
				<font>font13_title</font>
				<label>31153</label>
				<textcolor>LabelTextColor</textcolor>
			</control>
			<control type="list" id="90500">
				<!-- viewtype selection -->
				<top>62</top>
				<width>400</width>
				<height>840</height>
				<orientation>vertical</orientation>
				<onright>Dialog.Close(1133)</onright>
				<onright>ClearProperty(MediaMenu,Home)</onright>
				<onright>Control.SetFocus(50)</onright>
				<onup>90500</onup>
				<ondown>90500</ondown>
				<itemlayout width="400" height="60">
					<control type="label">
						<left>15</left>
						<width>400</width>
						<height>60</height>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="400" height="60">
					<control type="image">
						<width>400</width>
						<height>60</height>
						<texture border="5">listselect_fo.png</texture>
						<colordiffuse>FocusColor</colordiffuse>
						<visible>Control.HasFocus(90500)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>400</width>
						<height>60</height>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>


					<include content="Art1Picker" condition="String.IsEqual(Skin.String(ArtSelector),Art1)">
						<param name="CurrentView">$VAR[ActualViewMode]</param>
						<param name="CurrentContent">$INFO[Container.Content]</param>
					</include>
					<include content="Art2Picker" condition="String.IsEqual(Skin.String(ArtSelector),Art2)">
						<param name="CurrentView">$VAR[ActualViewMode]</param>
						<param name="CurrentContent">$INFO[ListItem.DBType]</param>
					</include>


				</content>
			</control>
		</control>
	</controls>
</window>


