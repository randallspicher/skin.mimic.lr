                <width>346</width>
                <height>98</height>
                <aspectratio align="center" aligny="bottom">keep</aspectratio>
                <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                <visible>![Container.Content(episodes) | Container.Content(artists) | Container.Content(musicvideos) | String.IsEqual(Control.GetLabel(10102),logo) | String.IsEqual(Control.GetLabel(10102),fanart)] + String.IsEmpty(ListItem.Art(landscape))</visible>
            </control>
            <control type="image">
                <animation center="auto" condition="Control.HasFocus(507)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
                <animation center="auto" condition="Control.HasFocus(507)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
                <width>346</width>
                <height>195</height>
                <texture border="5">overlays/diffuse-overlay.png</texture>
 						<visible>Skin.HasSetting(Enable.HighlightFocused)</visible>
            </control>
