                <control type="button">
                	<description>Back button</description>
					<visible>Skin.HasSetting(Enable.TouchScreen)</visible>
                    <texturefocus colordiffuse="highlight">osd/button_bg.png</texturefocus>
                    <texturenofocus colordiffuse="22ffffff">osd/button_bg.png</texturenofocus>
                    <label>z</label>
                    <align>center</align>
                    <width>80</width>
                    <height>80</height>
                    <font>IconLarge</font>
                    <onclick>Back</onclick>
                </control>

                <control type="button">
					<description>Menu button</description>
					<visible>Skin.HasSetting(Enable.TouchScreen)</visible>
                    <texturefocus colordiffuse="highlight">osd/button_bg.png</texturefocus>
