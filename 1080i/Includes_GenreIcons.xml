				<visible>$PARAM[visible]</visible>
				<left>0</left>
				<top>0</top>
				<width>$PARAM[width]</width>
				<height>$PARAM[height]</height>
				<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
